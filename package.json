{
	"name": "kubeApply",
	"displayName": "Kubernetes Apply",
	"description": "Apply/Diff/Delete Kubernetes resource files",
	"version": "0.0.3",
	"publisher": "bashu",
	"keywords": [
		"kubernetes",
		"apply",
		"yaml",
		"kubectl"
	],
	"icon": "images/apply.png",
	"engines": {
		"vscode": "^1.43.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:kubeApply.apply",
		"onCommand:kubeApply.diff",
		"onCommand:kubeApply.delete"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "kubeApply.apply",
				"title": "K8S: Apply"
			},
			{
				"command": "kubeApply.diff",
				"title": "K8S: Diff"
			},
			{
				"command": "kubeApply.delete",
				"title": "K8S: Delete"
			},
			{
				"command": "kubeApply.apply.noWait",
				"title": "K8S: Apply NoWait"
			},
			{
				"command": "kubeApply.apply.kustomize",
				"title": "K8S: Apply kustomize"
			},
			{
				"command": "kubeApply.diff.kustomize",
				"title": "K8S: Diff kustomize"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "kubeApply.apply",
					"group": "kubeApplygroup@1",
					"when": "resourceExtname == .yaml"
				},
				{
					"command": "kubeApply.diff",
					"group": "kubeApplygroup@1",
					"when": "resourceExtname == .yaml"
				},
				{
					"command": "kubeApply.delete",
					"group": "kubeApplygroup@2",
					"when": "resourceExtname == .yaml"
				},
				{
					"command": "kubeApply.apply-noWait",
					"group": "kubeApplygroup@1"
				},
				{
					"command": "kubeApply.apply-kustomize",
					"group": "kubeApplygroup@1"
				},
				{
					"command": "kubeApply.diff-kustomize",
					"group": "kubeApplygroup@1"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "",
		"publish": "vsce publish"
	},
	"devDependencies": {
		"@semantic-release/github": "^7.0.5",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.43.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"@typescript-eslint/parser": "^2.26.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"release": {
		"branches": "master",
		"verifyConditions": [
			"@semantic-release/github"
		],
		"publish": [
			"@semantic-release/github"
		],
		"success": [
			"@semantic-release/github"
		],
		"fail": [
			"@semantic-release/github"
		]
	},
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/bagechashu/vscode-plugin-cicd-github-actions.git"
	}
}
